<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N"
        crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/css/styles.css" />
</head>

<body>
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:20%">
        <div class="text-center py-4">
            <div>
                <a href="/explore.ejs"><img
                        src="https://upload.wikimedia.org/wikipedia/commons/1/13/Logo_PTIT_University.png" alt
                        height="48"></a>
            </div>
        </div>
        <ul class="w3-ul">
            <li><a href="/" class="w3-bar-item w3-button"><i class="fa fa-user mr-3"></i> User</a>
            </li>
            <li><a href="#" class="w3-bar-item w3-button"><i class="fa fa-dashboard mr-3"></i>Thống kê</a>
            </li>
            <li><a href="#" class="w3-bar-item w3-button"><i class="fa fa-bell mr-3"></i> Thông báo</a></li>
            <li><a href="/book-management" class="w3-bar-item w3-button"><i class="fa fa-folder-open mr-3"></i>
                    Quản lý truyện</a></li>
            <li><a href="/user-management" class="w3-bar-item w3-button"><i class="fa fa-users mr-3"></i> Quản lý người
                    dùng</a></li>
            <li><a href="#" class="w3-bar-item w3-button"><i class="fa fa-cog mr-3"></i> Cài đặt</a></li>
            <li><a href="#" class="w3-bar-item w3-button"><i class="fa fa-sign-out mr-3"></i> Đăng xuất</a></li>
            <li><a href="/upload-file" class="w3-bar-item w3-button"><i class="fa fa-upload mr-3">
                    </i> Tải lên tập tin</a></li>
        </ul>
    </div>
    <div style="margin-left:21%">
        <ul class="nav nav-tabs" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#list-user">Danh sách người dùng</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#add-user">Thêm người dùng</a>
            </li>
        </ul>
        <div class="tab-content">
            <div id="list-user" class="container tab-pane active"><br>
                <div class="w3-container">
                    <table class="w3-table-all w3-hoverable">
                        <thead>
                            <tr class="w3-light-grey">
                                <th>Id</th>
                                <th>Tên</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>

                        <body>
                            <% for(let i=0; i < dataUser.length; i++) { %>
                                <tr>
                                    <td>
                                        <%= dataUser[i].userId %>
                                    </td>
                                    <td>
                                        <%= dataUser[i].userName %>
                                    </td>
                                    <td>

                                        <button class="my-button dt-btn" type="button">
                                            <a href="/detail/user/<%= dataUser[i].userId %>">Chi Tiết</a>
                                        </button>
                                        <form action="/edit-user/<%= dataUser[i].userId %>" method="GET">
                                            <button class="my-button dt-btn" type="submit">
                                                <a>Sửa</a>
                                            </button>
                                        </form>
                                        <form action="/delete-user" method="POST">
                                            <input type="text" hidden value="<%= dataUser[i].userId %>" name="userId" />
                                            <button class="my-button dt-btn" type="submit">
                                                <a>Xóa</a>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                <% } %>
                        </body>
                    </table>
                </div>
            </div>
            <div id="add-user" class="container tab-pane fade"><br>
                <div class="create-user-container">
                    <form action="/create-new-user" method="POST">
                        <div><b>Create a new user:</b></div>
                        <div>
                            <label>Tên:</label>
                            <input type="text" name="userName" />
                        </div>
                        <div>
                            <label>Email:</label>
                            <input type="email" name="email" />
                        </div>
                        <div>
                            <label>Địa chỉ:</label>
                            <input type="text" name="address" />
                        </div>
                        <div>
                            <label>Vai trò:</label>
                            <input type="text" name="role" />
                        </div>
                        <div>
                            <button type="submit" class="my-submit-button">Đồng ý</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>

</body>

</html>